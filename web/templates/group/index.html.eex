<%= link "New group", to: group_path(@conn, :new) %>

<h1>All groups</h1>

<%= render FacebookClone.SharedView, "_search_form.html", search: @search, conn: @conn, path: group_path(@conn, :index) %>


<ul class="group-list">
  <%= for group <- @groups do %>
    <li>
      <span class="name"><%= link group.name, to: group_path(@conn, :show, group) %></span>
      <p class="description"><%= group.description %></p>
      <div class="links">
        <%= join_link(@conn, group) %>
        <%= leave_link(@conn, group) %>
        <%= edit_link(@conn, group) %>
        <%= delete_link(@conn, group) %>
      </div>

    </li>
  <% end %>
</ul>
