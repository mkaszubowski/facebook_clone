<%= form_for @changeset, group_path(@conn, @action), fn f -> %>
  <div class="form-group">
    <label>Name</label>
    <%= text_input f, :name %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= text_input f, :description %>
  </div>

  <div class="form-group">
    <%= submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
