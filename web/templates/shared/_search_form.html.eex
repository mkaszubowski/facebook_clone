<div class="search-form">
  <%= form_for @conn, @path, [as: :search, method: :get], fn f -> %>
    <%= text_input f, :expression %>
    <%= submit "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="current-search">
    <%= if @search do %>
      Searching for: <%= @search %>
      <%= link "x", to: @path %>
    <% end %>
  </div>
</div>
