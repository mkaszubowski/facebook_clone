<h1>All users</h1>

<%= render FacebookClone.SharedView, "_search_form.html", search: @search, conn: @conn, path: user_path(@conn, :index) %>

<ul class="user-list">
  <%= for user <- @users do %>
    <div class="user">
      <li><%= link full_name(user), to: user_path(@conn, :show, user) %></li>
      <%= invite_button(@conn, user, @current_user) %>
    </div>
  <% end %>
</ul>
