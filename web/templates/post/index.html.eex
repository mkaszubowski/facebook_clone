<h1>All posts</h1>

<%= for post <- @posts do %>
  <%= post.user.first_name %>
  <br />
  <p>
    <%= post.content %>
  </p>
  <span class="edit-button">
    <%= edit_button(@conn, post, @current_user) %>
  </span>
  <span class="delete-button">
    <%= delete_button(@conn, post, @current_user) %>
  </span>
  <hr />
<% end %>
