<h1>All posts</h1>
<div class="new-post">
  <h2>New post</h2>
  <%= render "_form.html", changeset: @conn, conn: @conn %>
</div>

<hr />

<%= for post <- @posts do %>
  <%= post.user.first_name %>
  <br />
  <p>
    <%= post.content %>
  </p>
  <span class="post-links">
    <%= post_links(@conn, post, @current_user) %>
  </span>
<hr />
<% end %>
