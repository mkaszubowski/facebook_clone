<div class="message-form">
  <%= form_for @changeset, conversation_message_path(@conn, :create, @conversation), [as: :message], fn f -> %>
    <div class="form-group">
      <%= text_input f, :conversation_id, value: @changeset.params["conversation_id"], hidden: true %>

      <div class="form-group">
        <%= text_input f, :content %>
      </div>

      <div class="form-group">
        <%= submit "Send", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
